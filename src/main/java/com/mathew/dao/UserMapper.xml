<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<!--   
    namespace：必须与对应的接口全类名一致  
    id: method name  
 -->

<mapper namespace="com.mathew.dao.IUserDao">

    <insert id="save" parameterType="User">
        insert into user(userId,phone) values(#{userId},#{phone})
    </insert>

    <update id="update" parameterType="User">
        update user set phone=#{phone} where userId=#{userId}
    </update>

    <delete id="delete" parameterType="int">
        delete from user where userId=#{userId}
    </delete>

     <!-- mybsits_config中配置的alias类别名,也可直接配置resultType为类路劲 -->
    <select id="findById" parameterType="int" resultType="User">
        select userId, phone from user where userId=#{userId}
    </select>

    <select id="findAll" resultType="User">
        select userId, phone from user
    </select>

</mapper>